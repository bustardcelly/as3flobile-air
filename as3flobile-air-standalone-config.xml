<?xml version="1.0"?>
<flex-config xmlns="http://www.adobe.com/2006/flex-config">

	<compiler>
    	<external-library-path>
      		<path-element>${playerglobal.lib.dir}</path-element>
      		<path-element>${air.lib.dir}</path-element>
    	</external-library-path>
    	<library-path append="true">
    		<path-element>${lib.dir}</path-element>
    	</library-path>
    	<source-path>
      		<path-element>${src.dir}</path-element>
    	</source-path>
  	</compiler>
  	
  	<include-sources includes="**/*">
    	<path-element>${src.dir}</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/helper</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/model</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/util</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view/list</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view/list/layout</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view/list/renderer</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view/viewport</path-element>
    	<path-element>${as3flobile.src.dir}/com/custardbelly/as3flobile/view/viewport/context</path-element>
    </include-sources>
  	
  	<output>${lib.bin.dir}/${lib.name}.swc</output>
  	
  	<metadata>
    	<creator>Todd Anderson</creator>
    	<description>http://github.com/bustardcelly/as3flobile-air</description>
    	<language>EN</language>
    	<title>External Adobe Air Enabled AS3 Library For Components targeting Mobile Devices</title>
  	</metadata>
  	
</flex-config>